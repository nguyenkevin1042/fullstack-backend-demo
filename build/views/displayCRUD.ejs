<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td,
        th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }

        a.btn-edit {
            background-color: yellow;
            border: none;
            cursor: pointer;
        }

        a.btn-delete {
            background-color: red;
            border: none;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <div>
        <a href="/crud">Add new user</a>
    </div>
    <table>
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Gender</th>
            <th>Role</th>
            <th>Phone Number</th>
            <th>Actions</th>
        </tr>

        <% for (let i=0; i < data.length; i++ ) { %>
            <tr>
                <td>
                    <%= data[i].email %>
                </td>
                <td>
                    <%= data[i].firstName %>
                </td>
                <td>
                    <%= data[i].lastName %>
                </td>
                <td>
                    <%= data[i].address %>
                </td>
                <td>
                    <%= data[i].gender %>
                </td>
                <td>
                    <%= data[i].roleId %>
                </td>
                <td>
                    <%= data[i].phoneNumber %>
                </td>
                <td>
                    <a href="/edit-crud?id=<%=data[i].id%>" class="btn-edit">Edit</a>
                    <a href="/delete-crud?id=<%=data[i].id%>" class="btn-delete">Delete</a>
                </td>
            </tr>
            <% } %>

    </table>
</body>

</html>